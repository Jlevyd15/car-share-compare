extends layout

block content
    div.section-one.car-dashboard-background
        a(href="/")
            img(class="logo" src="/images/assets/logos/carShare_text_logo_white.png")
        //- nav.top-nav
        //-     a(href="/")
        //-         img(class="logo small" src="/images/assets/logos/carShare_text_logo_white.png")
        span(id="openBtn")
          svg(version='1.1' x='0px' y='0px' width='30px' height='30px' viewBox='0 0 30 30' enable-background='new 0 0 30 30')
            rect(width='30' height='3' fill="white")
            rect(y='12' width='30' height='3' fill="white")
            rect(y='24' width='30' height='3' fill="white")
        span(id="closeBtn")
          svg(version="1.1" width='30px' height='30px')
            line(x1="0" x2="30" y1="0" y2="30" stroke-width="3" stroke="white")
            line(x1="30" x2="0" y1="0" y2="30" stroke-width="3" stroke="white")
        include slide-nav
        include desktop-nav
        div(class="center-column white")
            div.multi-box-column
                div(class="box two")
                    h1 Find a great car share service today!
                    h3 View and compare the Bay Area's top car share services
                div(class="box two")
                    a(href="/list") 
                        button.primary Compare Now
                    br
                    a(href="#section-two")
                        button.secondary Learn More
    div#section-two.section-two.car-background
        div(class="center-column down-arrow")
            a(href="#section-two")
                img(src="/images/assets/icons/down4.svg")
        div.center-column-black
            //- img#left-arrow(src="/images/assets/imagery/blue-curves.png")
            h1 Let's find your ride! 
            h2 we're here to help you find #[u your] car share service
            br
        div.center-column-black
            h2 Get Comparing
            h3 check out our convenient comparison tool to see each service side-by-side
            br
        div.center-column-black
            h2 Take a deeper look
            h3 click on any #[em more details] link or logo to see that service's offerings in depth
            br
            a(href="/list") 
                button.primary Get Started
            br
    div#section-three.section-two
        div(class="center-column down-arrow")
            a(href="#section-three")
                img(src="/images/assets/icons/down4.svg")
        div.center-column-black
            h2 The future of car ownership is here, #[u car sharing]
            //- p car sharing is a great alternative to ownership
        div.features-column
            div.multi-box-column
                div(class="box three")
                    img(src="/images/assets/icons/2x_steering_wheel.svg")
                    h3 rent from a wide range of great vehicles
                div(class="box three")
                    img(src="/images/assets/icons/2x_location.svg")
                    h3 cars located conveniently in your neighborhood
                div(class="box three")
                    img(src="/images/assets/icons/2x_price_tag_usd.svg")
                    h3 lower prices than traditional rental services
    //- div#section-two.section-two.alt
        div(class="center-column down-arrow")
            a(href="#section-two")
                img(src="/images/assets/icons/down4.svg")
        div.center-column
            h2 The future of car ownership is here, #[u car sharing]
            p car sharing is a great alternative to ownership
        div.features-column
            div.multi-box-column
                div(class="box three")
                    img(src="/images/assets/icons/2x_steering_wheel.svg")
                    h3 rent from a wide range of great vehicles
                div(class="box three")
                    img(src="/images/assets/icons/2x_location.svg")
                    h3 cars located conveniently in your neighborhood
                div(class="box three")
                    img(src="/images/assets/icons/2x_price_tag_usd.svg")
                    h3 lower prices than traditional rental services
    div#section-four.section-three
        div(class="center-column down-arrow")
            a(href="#section-four")
                img(src="/images/assets/icons/down4.svg")
        div(class="center-column-black")
            h2 View and compare the top car share services
            hr
        if(typeof ServiceData !== 'undefined')
                div.features-column
                    div#company-logos.multi-box-column
                        each service, i in ServiceData
                            div(class="box three")
                                a(href="/"+service.name)
                                    img(src=service.logo alt=service.name+" logo")
                        div(class="box three")
                            a(href="/list") 
                                button.primary Compare Now   
        else 
            div.features-column
                div#company-logos.multi-box-column
                    div(class="box three")
                        a(href="https://www.getaround.com/" target="_blank")
                            img(src="/images/assets/logos/getaround.png" alt="getaround.com")
                    div(class="box three")
                        a(href="https://turo.com/" target="_blank")
                            img(src="/images/assets/logos/turo.png" alt="turo.com")
                    div(class="box three")
                        a(href="https://www.zipcar.com/" target="_blank")
                            img(src="/images/assets/logos/zipcar.png" alt="zipcar.com")
                    //- div(class="box three")
                    //-     a(href="https://www.car2go.com/US/en/" target="_blank")
                    //-         img(src="/images/assets/logos/car2go.png" alt="car2go.com")
                    div(class="box three")
                        a(href="https://www.gocarma.com/" target="_blank")
                            img(src="/images/assets/logos/cityshare.png" alt="gocarma.com")
                    div(class="box three")
                        a(href="https://www.enterprisecarshare.com/us/en/home.html" target="_blank")
                            img(src="/images/assets/logos/enterprise.png" alt="enterprisecarshare.com")
                    div(class="box three")
                        //- label Enter Zipcode
                        //- br
                        //- input.zipInput(placeholder="zipcode" type="number")
                        a(href="/list") 
                            button.primary Compare Now
    div.footer-section
        div(class="center-column white")
            div.multi-box-column
                div(class="box three")
                    div.social-icons
                        p Find us on social media
                        img(src="/images/assets/icons/square-facebook.svg")
                        img(src="/images/assets/icons/square-twitter.svg")
                        img(src="/images/assets/icons/mail-square-social-media.svg")
                div(class="box three")
                    div.copyright
                        img(src=src="/images/assets/logos/car-share-logo.png")
                div(class="box three")
                    div.copyright
                        p Â© 2016 CarShare Compare, All Rights Reserved.