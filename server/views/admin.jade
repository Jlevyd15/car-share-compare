extends layout

block content
    div.section-one
        nav.top-nav
            a(href="/")
                img(class="logo small" src="/images/assets/logos/carShare_text_logo_white.png")
            nav.desktop-nav
                  ul
                    a(href="/")
                        li Home
                    a(href="list")
                      li Compare
                    a(href="about")
                      li About
                    a(href="contact")
                      li Contact
        span(id="openBtn" aria-hidden="true")
          svg(version='1.1' x='0px' y='0px' width='30px' height='30px' viewBox='0 0 30 30' enable-background='new 0 0 30 30')
            rect(width='30' height='3' fill="white")
            rect(y='12' width='30' height='3' fill="white")
            rect(y='24' width='30' height='3' fill="white")
        span(id="closeBtn" aria-hidden="true")
          svg(version="1.1" width='30px' height='30px')
            line(x1="0" x2="30" y1="0" y2="30" stroke-width="3" stroke="white")
            line(x1="30" x2="0" y1="0" y2="30" stroke-width="3" stroke="white")
        include slide-nav
        include login
        //- div.eighty-px
        div(class="center-column grey")
            div.multi-box-column
                div(class="box two")
                    h1 Our Mission
                    h4 We want to provide you with the best information on car sharing in the Bay Area
                div(class="box two")
                    h4 CarShare Compare provides objective analysis of car share services across the Bay Area. 
                    p By combing through hundreds of web pages, we captured only the important stuff. No sales pitch or leaving out key details, CarShare Compare is a place to evaluate car share services by its key offerings. 
    //- div.eighty-px.alt
    //- div.footer-section
        div(class="center-column white")
            div.multi-box-column
                div(class="box three")
                    div.social-icons
                        p Find us on social media
                        img(src="/images/assets/icons/square-facebook.svg")
                        img(src="/images/assets/icons/square-twitter.svg")
                        img(src="/images/assets/icons/mail-square-social-media.svg")
                div(class="box three")
                    div.copyright
                        img(src=src="/images/assets/logos/car-share-logo.png")
                div(class="box three")
                    div.copyright
                        p Â© 2016 CarShare Compare, All Rights Reserved.